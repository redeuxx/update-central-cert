
BASE_URL=https://apigw-uswest4.central.arubanetworks.com
# Token: either fixed ACCESS_TOKEN or auto-refresh triplet:
ACCESS_TOKEN=
CLIENT_ID=
CLIENT_SECRET=
REFRESH_TOKEN=

CENTRAL_CID=                 # optional, used for POST fallback & list pagination
REPLACE=true                 # delete existing cert with same NAME before upload
WRITE_TOKEN_CACHE=1          # write current token to log/central_token.json
REQUEST_TIMEOUT=45
FORCE_POST=false             # skip PUT and try POSTs only
LOG_LEVEL=INFO               # console level; files always get DEBUG

CERTIFICATE_PATH=C:/path/to/your.pfx
CERTIFICATE_NAME=my_cert_name
CERTIFICATE_PASSPHRASE=123456  # required for PKCS12

# Listing controls
CERT_LIST_LIMIT=200           # will be clamped to 20 by script (cluster max)
CERT_LIST_MAX=5000